<h1>Listing pics</h1>

<table>
  <thead>
    <tr>
      <th>Src</th>
      <th>Mot</th>
      <th>Sender</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pics.each do |pic| %>
      <tr>
        <td><img src="<%= pic.src %>" /></td>
        <td><%= pic.mot %></td>
        <td><%= pic.sender %></td>
        <td><%= link_to 'Show', pic %></td>
        <td><%= link_to 'Edit', edit_pic_path(pic) %></td>
        <td><%= link_to 'Destroy', pic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

